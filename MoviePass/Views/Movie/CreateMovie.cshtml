@model MoviePass.ViewModels.MovieFormViewModel
@{
    @ViewBag.Title
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

@using (Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Name)
        @Html.TextAreaFor(m => m.Movies.Name, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleaseDate)
        @Html.TextAreaFor(m => m.Movies.ReleaseDate, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Movies.GenreId)
        @Html.DropDownListFor(m => m.Movies.GenreId, new SelectList(Model.Genres, "Id", "Name"), "--Select--", new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Movies.NumberInStock)
        @Html.TextAreaFor(m => m.Movies.NumberInStock, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Movies.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}